    <context:component-scan base-package="com.mufan"/>
    <aop:aspectj-autoproxy/>
    <!--<context:property-placeholder location="classpath:filmconfig.properties"/>-->
    <bean id="propertyConfigurer"
          class="com.mufan.utils.CustomizedProperty">
        <property name="locations">
            <list>
                <value>classpath:jdbc1.properties</value>
            </list>
        </property>
    </bean>
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>/WEB-INF/filmconfig</value>
            </list>
        </property>
    </bean>
    <jpa:repositories base-package="com.mufan.*.dao" repository-impl-postfix="Impl"
                      entity-manager-factory-ref="entityFactory" transaction-manager-ref="txManager"/>
    <!--<jpa:repositories base-package="com.mufan.ap.dao" repository-impl-postfix="Impl"
                      entity-manager-factory-ref="entityFactory" transaction-manager-ref="txManager"/>-->
    <bean id="entityFactory" class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="vehicle"/>

    </bean>
    <bean id="txManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="entityFactory"/>
    </bean>
    <tx:annotation-driven transaction-manager="txManager"/>
</beans>